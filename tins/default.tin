	#CLASS learn read tins/learn.tin;

	#var skill_to_learn %1;
	#var target_skill_level %2;
	#var master %3;
	#var practice_method %4;
	#var recover_method %5;
	#var path_to_master %6;
	#var path_to_recover %7;
	
	idle_prevention;
}

