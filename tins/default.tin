	#CLASS practice read tins/practice.tin;

	#var skill_to_practice %1;
	#var skill_to_upgrade %2;
	#var target_skill_level %3;
	#var recover_method %4; 
	#var fight_yutu %5;
	
	idle_prevention 120;
}

